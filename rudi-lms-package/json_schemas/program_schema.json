{
  "$id": "program_schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RUDI Program",
  "type": "object",
  "required": [
    "program"
  ],
  "properties": {
    "program": {
      "type": "object",
      "required": [
        "slug",
        "name",
        "courses"
      ],
      "properties": {
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9_\\-]+$"
        },
        "name": {
          "type": "string",
          "minLength": 3
        },
        "organizationSlug": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "tracks": {
          "type": "array",
          "items": {
            "enum": [
              "core",
              "builder",
              "business",
              "professional"
            ]
          }
        },
        "courses": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "slug",
              "title",
              "lessons"
            ],
            "properties": {
              "slug": {
                "type": "string",
                "pattern": "^course_\\d{2}$"
              },
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "track": {
                "enum": [
                  "core",
                  "builder",
                  "business",
                  "professional"
                ]
              },
              "level": {
                "enum": [
                  "BEGINNER",
                  "INTERMEDIATE",
                  "ADVANCED",
                  "EXPERT"
                ]
              },
              "durationMinutes": {
                "type": "integer",
                "minimum": 0
              },
              "learningObjectives": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "lessons": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": [
                    "lessonNumber",
                    "title",
                    "components"
                  ],
                  "properties": {
                    "lessonNumber": {
                      "type": "string",
                      "pattern": "^\\d{2}(\\.\\d+)?$"
                    },
                    "title": {
                      "type": "string"
                    },
                    "durationMinutes": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "difficultyLevel": {
                      "enum": [
                        "BEGINNER",
                        "INTERMEDIATE",
                        "ADVANCED",
                        "EXPERT"
                      ]
                    },
                    "components": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "object",
                        "required": [
                          "type",
                          "name",
                          "groupKey",
                          "assets"
                        ],
                        "properties": {
                          "type": {
                            "enum": [
                              "VIDEO",
                              "SLIDES",
                              "LAB",
                              "QUIZ",
                              "RESOURCE"
                            ]
                          },
                          "name": {
                            "type": "string"
                          },
                          "groupKey": {
                            "type": "string"
                          },
                          "orderIndex": {
                            "type": "integer",
                            "minimum": 0
                          },
                          "isRequired": {
                            "type": "boolean"
                          },
                          "assets": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                              "type": "object",
                              "required": [
                                "relativePath"
                              ],
                              "properties": {
                                "relativePath": {
                                  "type": "string"
                                },
                                "role": {
                                  "enum": [
                                    "INSTRUCTION",
                                    "STARTER",
                                    "SOLUTION",
                                    "DATA",
                                    "RUBRIC",
                                    "CONFIG",
                                    "OTHER"
                                  ]
                                },
                                "orderIndex": {
                                  "type": "integer",
                                  "minimum": 0
                                }
                              },
                              "additionalProperties": false
                            }
                          }
                        },
                        "additionalProperties": false
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}