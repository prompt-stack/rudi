# Example Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
# Local Development (Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/rudi_dev"
DIRECT_URL="postgresql://postgres:postgres@localhost:5433/rudi_dev"

# Production (Supabase)
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres"
# DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres"

# ============================================
# AUTHENTICATION
# ============================================
AUTH_SECRET="your-secret-here-minimum-32-characters"
AUTH_URL="http://localhost:3001"
AUTH_TRUST_HOST=true

# OAuth Providers (optional)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# ============================================
# VIDEO STREAMING
# ============================================
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_STREAM_API_TOKEN="your-cloudflare-api-token"

# ============================================
# STORAGE (Production)
# ============================================
# NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_ID].supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
# SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3001"
NODE_ENV="development"
PORT=3001

# ============================================
# EMAIL (optional)
# ============================================
# RESEND_API_KEY=""
# EMAIL_FROM="noreply@yourdomain.com"

# ============================================
# PAYMENTS (optional)
# ============================================
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""